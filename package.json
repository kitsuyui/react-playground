{
  "name": "react-playground",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "config/*",
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm --parallel dev",
    "format": "pnpm format:biome && pnpm format:package-json && pnpm format:stylelint",
    "format:biome": "biome lint --write ./",
    "format:package-json": "sort-package-json \"package.json\" \"packages/*/package.json\"",
    "format:stylelint": "stylelint 'src/**/*.css' --fix --allow-empty-input",
    "lint": "pnpm lint:biome && pnpm lint:package-json && pnpm lint:stylelint",
    "lint:biome": "biome lint ./",
    "lint:package-json": "sort-package-json --check \"package.json\" \"packages/*/package.json\"",
    "lint:stylelint": "stylelint 'packages/src/**/*.css' --allow-empty-input",
    "start": "pnpm --parallel dev",
    "test": "vitest run --coverage packages/*/src",
    "test:vrt": "pnpm -r test:vrt",
    "test:vrt:install": "pnpm test:vrt:install",
    "test:vrt:update": "pnpm test:vrt:update",
    "typedoc": "typedoc"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@swc/core": "^1.11.4",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.13.5",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitest/coverage-v8": "3.0.7",
    "identity-obj-proxy": "^3.0.0",
    "jsdom": "^26.0.0",
    "sort-package-json": "^2.14.0",
    "stylelint": "^16.14.1",
    "stylelint-config-recommended": "^15.0.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "typedoc": "^0.27.9",
    "typescript": "^5.7.3",
    "vitest": "^3.0.7"
  },
  "packageManager": "pnpm@10.5.1"
}
